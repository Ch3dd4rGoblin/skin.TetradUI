<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(ShowSplashScreen)">SetFocus(9001)</onload>
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload>
	<controls>
		<control type="button" id="9001">
			<left>2000</left>
			<onfocus>PlayMedia(special://skin/media/video/splash.mp4,noresume)</onfocus>
			<visible>Skin.HasSetting(ShowSplashScreen)</visible>
		</control>
	</controls>
</window>