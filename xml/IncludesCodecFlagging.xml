<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VideoCodecFlagging">
		<control type="image">
			<description>Video rez Image</description>
			<width>80</width>
			<height>35</height>
			<texture>$INFO[ListItem.VideoResolution,flagging/videoresolution/,.png]</texture>
		</control>
		<control type="image">
			<description>Common Codec Image</description>
			<width>80</width>
			<height>35</height>
			<texture>$INFO[ListItem.VideoCodec,flagging/videocodec/,.png]</texture>
			<!-- Don't show if its one of the 500 divx codecs -->
			<visible>![String.StartsWith(ListItem.VideoCodec,div) | String.IsEqual(ListItem.VideoCodec,dx50)]</visible>
		</control>
		<control type="image">
			<description>Divx Codec Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/divx.png</texture>
			<visible>[String.StartsWith(ListItem.VideoCodec,div) | String.IsEqual(ListItem.VideoCodec,dx50)]</visible>
		</control>
	</include>
	<include name="AudioCodecFlagging">
		<control type="image">
			<description>Audio Codec Image</description>
			<width>80</width>
			<height>35</height>
			<texture>$INFO[ListItem.AudioCodec,flagging/audiocodec/,.png]</texture>
		</control>
		<control type="image">
			<description>Audio Channels Image</description>
			<width>80</width>
			<height>35</height>
			<texture>$INFO[ListItem.AudioChannels,flagging/audiochannel/,.png]</texture>
		</control>
	</include>
	<include name="AspectCodecFlagging">
		<control type="image">
			<description>Aspectratio Image</description>
			<width>80</width>
			<height>35</height>
			<texture>$INFO[ListItem.VideoAspect,flagging/aspectratio/,.png]</texture>
		</control>
	</include>
	<include name="VideoTypeHackFlaggingConditions">
		<control type="image">
			<description>Bluray Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/bluray.png</texture>
			<visible>[String.Contains(ListItem.FilenameAndPath,bluray) | String.Contains(ListItem.FilenameAndPath,bdrip) | String.Contains(ListItem.FilenameAndPath,brrip)] + !Skin.HasSetting(HideFilenameFlagging)</visible>
		</control>
		<control type="image">
			<description>HDDVD Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/hddvd.png</texture>
			<visible>String.Contains(ListItem.FilenameAndPath,hddvd) + !Skin.HasSetting(HideFilenameFlagging)</visible>
		</control>
		<control type="image">
			<description>DVD Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/dvd.png</texture>
			<visible>[String.Contains(ListItem.FilenameAndPath,dvd) + ![String.Contains(ListItem.FilenameAndPath,hddvd) | String.Contains(ListItem.FilenameAndPath,bluray) | String.Contains(ListItem.FilenameAndPath,bdrip)]] + !Skin.HasSetting(HideFilenameFlagging)</visible>
		</control>
		<control type="image">
			<description>TV Types Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/tv.png</texture>
			<visible>[String.Contains(ListItem.FilenameAndPath,pdtv) | String.Contains(ListItem.FilenameAndPath,hdtv) | String.Contains(ListItem.FilenameAndPath,dsr)] + !Skin.HasSetting(HideFilenameFlagging)</visible>
		</control>
		<control type="image">
			<description>VHS Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videocodec/vhs.png</texture>
			<visible>String.Contains(ListItem.FilenameAndPath,vhs) + !Skin.HasSetting(HideFilenameFlagging)</visible>
		</control>
		<control type="image">
			<description>3D</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/videoresolution/3D.png</texture>
			<visible>ListItem.IsStereoscopic</visible>
		</control>
	</include>

	<include name="AudioTypeHackFlaggingConditions">
		<control type="image">
			<description>WAV Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/wav.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.wav)</visible>
		</control>
		<control type="image">
			<description>MP3 Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/mp3.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.mp3)</visible>
		</control>
		<control type="image">
			<description>WMA Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/wma.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.wma)</visible>
		</control>
		<control type="image">
			<description>AAC, MP4 and M4A Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/aac.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.aac) | String.EndsWith(ListItem.Filename,.m4a) | String.EndsWith(ListItem.Filename,.mp4)</visible>
		</control>
		<control type="image">
			<description>flac Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/flac.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.flac)</visible>
		</control>
		<control type="image">
			<description>APE Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/ape.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.ape)</visible>
		</control>
		<control type="image">
			<description>OGG Image</description>
			<width>80</width>
			<height>35</height>
			<texture>flagging/audiocodec/ogg.png</texture>
			<visible>String.EndsWith(ListItem.Filename,.ogg)</visible>
		</control>
		<control type="group">
			<description>Rating</description>
			<width>90</width>
			<height>35</height>
			<visible>!String.IsEmpty(ListItem.Year)</visible>
			<control type="image">
				<description>Runtime back</description>
				<left>0</left>
				<top>0</top>
				<width>90</width>
				<height>35</height>
				<texture border="5">flagging/blank.png</texture>
			</control>
			<control type="label">
				<description>Runtime</description>
				<left>10</left>
				<top>8</top>
				<width>70</width>
				<height>19</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>blue</textcolor>
				<label>$INFO[ListItem.Year]</label>
			</control>
		</control>
		<control type="group">
			<description>Rating</description>
			<width>120</width>
			<height>35</height>
			<visible>!String.IsEmpty(ListItem.StarRating)</visible>
			<control type="image">
				<description>Rating back</description>
				<left>0</left>
				<top>0</top>
				<width>110</width>
				<height>35</height>
				<texture border="5">flagging/blank.png</texture>
			</control>
			<control type="image">
				<description>Rating</description>
				<left>5</left>
				<top>5</top>
				<width>100</width>
				<height>25</height>
				<aspectratio>keep</aspectratio>
				<texture fallback="flagging/starrating/rating0.png">$INFO[ListItem.StarRating,flagging/starrating/]</texture>
			</control>
		</control>
	</include>

	<include name="PictureTypeHackFlaggingConditions">
		<control type="group">
			<description>Date</description>
			<width>150</width>
			<height>40</height>
			<visible>!String.IsEmpty(ListItem.Date)</visible>
			<control type="image">
				<description>Date back</description>
				<left>0</left>
				<top>0</top>
				<width>150</width>
				<height>40</height>
				<texture border="5">flagging/blank.png</texture>
			</control>
			<control type="label">
				<description>Runtime</description>
				<left>10</left>
				<top>8</top>
				<width>130</width>
				<height>22</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>blue</textcolor>
				<label>$INFO[ListItem.Date]</label>
			</control>
		</control>
		<control type="group">
			<description>Resolution</description>
			<width>150</width>
			<height>40</height>
			<visible>!String.IsEmpty(ListItem.PictureResolution)</visible>
			<control type="image">
				<description>Rating back</description>
				<left>0</left>
				<top>0</top>
				<width>150</width>
				<height>40</height>
				<texture border="5">flagging/blank.png</texture>
			</control>
			<control type="label">
				<description>Runtime</description>
				<left>10</left>
				<top>8</top>
				<width>130</width>
				<height>22</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>green</textcolor>
				<label>$INFO[ListItem.PictureResolution]</label>
			</control>
		</control>
	</include>
</includes>